#######################################################
##########        BEGIN User part            ##########
##########       You can change it           ##########
#######################################################
CXXFLAGS = -std=c++11 -Wall
LDFLAGS = 
SOURCES = mediator/mediator.cpp mediator/main.cpp
NAME = medi
#######################################################
##########        END User part              ##########
#######################################################

#######################################################
##########      BEGIN Automation part        ##########
##########     You shouldn't change it       ##########
#######################################################
OBJECTS = $(SOURCES:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJECTS)
	$(CXX) $(OBJECTS) $(LDFLAGS) -o $(NAME)

%.o: %.cpp
	$(CXX) -c $(CXXFLAGS) $< -o $@

clean:
	rm -f $(OBJECTS)
	rm -f $(NAME)
#######################################################
##########       END Automation part         ##########
#######################################################

